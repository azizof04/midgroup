            <div class="popArea">
                @if(ViewBag.AktivSual == "Popup"){
                    @(await Component.InvokeAsync("Popup"))
                }
            </div>

                <div class="questions-box">

                    <div class="Up-ques-area">
                         @if(ViewBag.AktivSual == "Misal"){
                    @(await Component.InvokeAsync("Misal"))
